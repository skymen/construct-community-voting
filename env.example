# Discord OAuth Configuration
# Get these from https://discord.com/developers/applications

DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_BOT_TOKEN=your_bot_token

# Discord Server (Guild) Settings
# Enable Developer Mode in Discord settings to copy IDs
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_REQUIRED_ROLE_ID=your_required_role_id
DISCORD_ADMIN_ROLE_ID=your_admin_role_id

# Session Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_a_random_string

# Server Configuration
PORT=3000

# Optional: Override redirect URI for production
# REDIRECT_URI=https://yourdomain.com/auth/discord/callback

